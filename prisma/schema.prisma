// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         String    @id @default(uuid())
  name       String
  email      String    @unique
  password   String
  role       USER_ROLE
  contactNo  String
  address    String
  profileImg String    @default("")

  @@map("users")
}

enum USER_ROLE {
  admin
  customer
}

model Category {
  id    String @id @default(uuid())
  title String

  @@map("categories")
}
